@if (!string.IsNullOrEmpty(Entry.Url))
{
    <a href="@Entry.Url" class="relative flex flex-col gap-4
        after:absolute after:content-['âžš'] after:top-2 after:right-0 after:text-lg">
        <Category Header="@Entry.Title">@Entry.Description</Category>
        <div class="text-xs">
            <NoWrapElements Entries="Entry.TechUsed"/>
        </div>
    </a>
}
else
{
    <div class="grid gap-4">
        <Category Header="@Entry.Title">@Entry.Description</Category>
